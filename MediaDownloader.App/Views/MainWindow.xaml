<mah:MetroWindow  x:Class="MediaDownloader.App.Views.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                  xmlns:viewModels="clr-namespace:MediaDownloader.App.ViewModels"
                  mc:Ignorable="d"
                  Title="{Binding Path=Header, Mode=OneWay}"
                  Height="450" Width="800"
                  WindowStartupLocation="CenterScreen"
                  d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
                  Closing="Window_OnClosing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Url Control -->
        <ContentPresenter Grid.Row="0"
                          Content="{Binding InputUrlViewModel.View, Mode=OneWay}"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Stretch"/>
    </Grid>
</mah:MetroWindow>